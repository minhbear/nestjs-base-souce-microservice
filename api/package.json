{
  "name": "nest-typescript-starter",
  "private": true,
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "dev": "webpack --watch --progress",
    "build": "rm -rf dist && yarn webpack",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "node --enable-source-maps .webpack/main.js",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:integration": "cross-env APP_ENV=test jest --detectOpenHandles --testTimeout=30000 --config ./test/jest-e2e.json",
    "test": "yarn test:integration --forceExit",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migration:create": "yarn typeorm migration:create -d src/db/migrations -n",
    "migration:run": "ts-node -r tsconfig-paths/register src/db/runMigrations.ts apply",
    "migration:revert": "ts-node -r tsconfig-paths/register src/db/runMigrations.ts revert",
    "migration:seed": "ts-node src/db/seeds/scripts/initDataCountries.ts",
    "api:gen": "nest g module $NAME $ROOT && nest g controller $NAME $ROOT && nest g service $NAME $ROOT",
    "typecheck": "./node_modules/.bin/tsc --noEmit",
    "doc": "npx compodoc --port 11045 -p tsconfig.json -s",
    "doc:serve": "yarn doc && npx compodoc -s"
  },
  "dependencies": {
    "@nestjs/cli": "^9.1.8",
    "@nestjs/common": "^9.2.1",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.2.1",
    "@nestjs/jwt": "^10.0.1",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/terminus": "^9.2.1",
    "@nestjs/typeorm": "^9.0.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/hapi__joi": "^17.1.9",
    "@types/multer": "^1.4.7",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "amqplib": "^0.10.3",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "clean-webpack-plugin": "^4.0.0",
    "cookie-parser": "^1.4.6",
    "fork-ts-checker-webpack-plugin": "^8.0.0",
    "joi": "^17.7.0",
    "nodemon-webpack-plugin": "^4.8.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.0.5",
    "rxjs": "^7.8.0",
    "typeorm": "^0.3.11"
  },
  "devDependencies": {
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.2.1",
    "@types/amqplib": "^0.10.1",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.31.0",
    "eslint-plugin-import": "^2.27.4",
    "jest": "^29.3.1",
    "prettier": "^2.8.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4",
    "webpack": "^5.38.1",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.10.0",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
